{
  "name": "noodl-ui",
  "version": "0.1.28",
  "description": "NOODL JavaScript library",
  "author": "Christopher Tran <pfftdammitchris@gmail.com>",
  "license": "MIT",
  "repository": "pfftdammitchris/noodl-ui",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c --environment BUILD:production",
    "start": "rm -rf dist && rollup -c -w --environment BUILD:development",
    "test": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register -r ts-node/register --file src/setupTests.ts --extensions ts --watch --watch-files src src/**/*.test.ts",
    "test:file": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register -r ts-node/register --file src/setupTests.ts --extensions ts --verbose --watch --watch-files src"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "warn"
    }
  },
  "gitHead": "57753b8cd427d177c623188a536c58a70f9a8cbd",
  "dependencies": {
    "noodl-building-blocks": "file:../noodl-building-blocks"
  }
}
