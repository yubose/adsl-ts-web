{
  "name": "noodl-ui",
  "version": "0.1.74",
  "description": "NOODL JavaScript library",
  "author": "Christopher Tran <pfftdammitchris@gmail.com>",
  "license": "MIT",
  "repository": "pfftdammitchris/noodl-ui",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c --environment BUILD:production",
    "start": "rm -rf dist && rollup -c -w --environment BUILD:development",
    "test": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register --file src/setupTests.ts --extensions ts --watch --watch-files \"src/**/*.ts\" \"src/**/*.test.ts\"",
    "test:file": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register --file src/setupTests.ts --extensions ts --watch --watch-files \"src/**/*.ts\""
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "gitHead": "b8bdca3b7f3d00aee7b947f190dadc07c1885acc"
}
