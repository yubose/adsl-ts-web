{
  "name": "noodl-ui",
  "version": "0.0.25-alpha.0",
  "description": "NOODL JavaScript library",
  "author": "Christopher Tran <pfftdammitchris@gmail.com>",
  "license": "MIT",
  "repository": "pfftdammitchris/noodl-ui",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c --environment BUILD:production",
    "build:scripts": "webpack --mode production --config webpack.scripts.js",
    "start": "rm -rf dist && rollup -c -w",
    "start:scripts": "rm -rf _dev_/compiled && webpack --mode development --config webpack.scripts.js --watch",
    "script": "node _dev_/compiled/index.js",
    "script:fetchjson": "npm run script fetch json",
    "script:fetchyml": "npm run script fetch yml",
    "script:eval": "npm run script --mode eval",
    "script:keys": "npm run script keys",
    "script:properties": "npm run script properties",
    "script:file": "nodemon _dev_/compiled/index.js testfile",
    "test": "ts-mocha -p ./tsconfig.test.json -r jsdom-global/register -r ts-node/register --extensions ts --watch --watch-files src src/**/*.test.ts --verbose --file ./src/setupTests.ts",
    "test:file": "ts-mocha -p ./tsconfig.test.json -r jsdom-global/register --extensions ts --watch --watch-files src --file ./src/setupTests.ts",
    "test:filea": "ts-mocha -p ./tsconfig.test.json -r jsdom-global/register --extensions ts --watch --watch-files src --file ./src/setupTests.ts",
    "test:scripts": "ts-mocha -p tsconfig.test.json -r ts-node/register --extensions ts --watch --watch-files _dev_ _dev_/**/*.test.ts",
    "tsc": "tsc --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.3",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.156",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.4",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "fs-extra": "^9.0.1",
    "immer": "^7.0.9",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lodash": "^4.17.20",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "rollup": "^2.27.1",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "sinon": "^9.0.2",
    "ts-loader": "^8.0.3",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2",
    "yaml": "^1.10.0"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "warn"
    }
  }
}
