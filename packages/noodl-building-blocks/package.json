{
  "name": "noodl-building-blocks",
  "version": "0.0.4",
  "description": "NOODL loose building blocks",
  "author": "Christopher Tran <pfftdammitchris@gmail.com>",
  "homepage": "",
  "license": "ISC",
  "main": "dist/noodl-building-blocks.cjs.js",
  "module": "dist/noodl-building-blocks.es.js",
  "jsnext:main": "dist/noodl-building-blocks.es.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c --environment BUILD:production",
    "start": "rm -rf dist && rollup -c -w --environment BUILD:development",
    "test": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register -r ts-node/register --extensions ts --watch --watch-files src src/**/*.test.ts",
    "test:file": "cross-env NODE_ENV=test ts-mocha -p tsconfig.test.json -r jsdom-global/register -r ts-node/register --file src/setupTests.ts --extensions ts --watch --watch-files src"
  },
  "peerDependencies": {
    "noodl-ui": "^0.1.27",
    "noodl-utils": "^0.0.19"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "http://gitlab.aitmed.com/pfftdammitchris/aitmed-noodl-web.git"
  }
}
