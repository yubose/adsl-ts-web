{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": ["esnext"],
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "esbuild.js", "src/**/*.test.ts"],
  "include": ["src"]
}
