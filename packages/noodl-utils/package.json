{
  "name": "noodl-utils",
  "version": "0.0.24",
  "description": "Utility/helpers for working with NOODL values",
  "author": "Christopher Tran <pfftdammitchris@gmail.com>",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "rm -rf dist && tsc -w",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register -r jsdom-global/register --extensions ts --watch --watch-files src src/**/*.test.ts --verbose",
    "test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register -r jsdom-global/register --extensions ts --watch --watch-files src"
  },
  "keywords": [
    "noodl"
  ],
  "homepage": "",
  "license": "ISC",
  "directories": {
    "dist": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "http://gitlab.aitmed.com/pfftdammitchris/noodl-utils.git"
  },
  "peerDependencies": {
    "noodl-ui": "^0.1.33"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.4",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "mocha": "^8.0.1",
    "noodl-ui": "^0.1.33",
    "sinon": "^9.0.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
