{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/test-utils.ts"
  ],
  "include": ["src", "rollup.config.js"]
}
