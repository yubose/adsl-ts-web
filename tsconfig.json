{
  "typedocOptions": {
    "name": "AiTmed NOODL",
    "entryPoints": [
      "./packages/noodl-ui/tsconfig.json",
      "./packages/noodl-ui-dom/tsconfig.json"
    ],
    "out": "./docs/"
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "keyofStringsOnly": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "noEmitOnError": false,
    "noImplicitThis": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "include": ["src/**/*"],
  "exclude": [
    "_data",
    "docs",
    "libs",
    "node_modules",
    "build",
    "dist",
    "generated",
    "output",
    "public",
    "server",
    "scripts"
  ]
}
