{
  "ts-node": {
    "transpileOnly": true
  },
  "typedocOptions": {
    "entryPoints": [
      "./packages/noodl-ui/tsconfig.json",
      "./packages/noodl-ui-dom/tsconfig.json"
    ],
    "name": "AiTmed NOODL",
    "out": "./docs/"
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "keyofStringsOnly": true,
    "lib": ["dom", "dom.iterable", "esnext",],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noLib": false,
    "outDir": "build",
    "paths": {},
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "include": [
    "dev/cpt/**/*.ts",
    "packages/core/src/**/*",
    "packages/homepage/src/**/*",
    "packages/noodl-pi/src/**/*",
    "packages/noodl-ui/src/**/*",
    "packages/noodl-utils/src/**/*",
    "packages/noodl-types/src/**/*",
    "public/piBackgroundWorker.js",
    "src/**/*"
  ],
  "exclude": [
    "docs",
    "libs",
    "node_modules",
    "build",
    "dist",
    "generated",
    "output",
  ]
}
