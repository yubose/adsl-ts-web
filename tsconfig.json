{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "noEmit": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": ["src", "packages/**/*.ts"],
  "exclude": ["_data", "node_modules", "legacy"]
}
