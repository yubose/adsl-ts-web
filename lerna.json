{
  "command": {
    "bootstrap": {
      "hoist": true,
      "ignore": ["noodl-core-docs", "noodl-pi"]
    },
    "create": {
      "license": "MIT"
    },
    "publish": {
      "bump": "patch",
      "ignore": [
        "noodl-core-docs",
        "noodl-file",
        "noodl-loader",
        "noodl-pi",
        "noodl-yaml",
        "noodl-ui-test-utils"
      ],
      "message": "Update"
    }
  },
  "ignore": ["noodl-core-docs", "noodl-pi", "noodl-yaml"],
  "ignoreChanges": ["**/__tests__/**"],
  "loglevel": "success",
  "packages": [
    "packages/homepage",
    "packages/gatsby-plugin-noodl",
    "packages/noodl-action-chain",
    "packages/noodl-builder",
    "packages/noodl-core",
    "packages/noodl-loader",
    "packages/noodl-yaml",
    "packages/noodl-file",
    "packages/noodl-pi",
    "packages/noodl-types",
    "packages/noodl-ui",
    "packages/noodl-ui-test-utils",
    "packages/noodl-utils"
  ],
  "registry": "https://registry.npmjs.org/",
  "useNx": true,
  "version": "independent"
}
