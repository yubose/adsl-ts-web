{
  "command": {
    "bootstrap": {
      "hoist": true,
      "ignore": [
        "docs",
        "@noodl/loader"
      ]
    },
    "create": {
      "license": "MIT"
    },
    "publish": {
      "bump": "patch",
      "ignore": [
        "docs",
        "noodl-ui-test-utils",
        "noodl-builder",
        "@noodl/loader"
      ],
      "message": "Update"
    }
  },
  "ignore": [
    "docs"
  ],
  "ignoreChanges": [
    "**/__tests__/**"
  ],
  "loglevel": "success",
  "packages": [
    "packages/*"
  ],
  "registry": "https://registry.npmjs.org/",
  "useWorkspaces": true,
  "version": "independent"
}
