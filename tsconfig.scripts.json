{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "scripts",
    "declaration": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": [
    "dist",
    "node_modules",
    "packages",
    ".vscode",
    ".github",
    "scripts/compiled/**/*",
    "src"
  ],
  "include": ["scripts"]
}
